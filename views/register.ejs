<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="/css/register.css" />

    <%- include('layouts/head'); -%>
  </head>
  <body>
    <%- include('layouts/header'); -%>
    <main>
      <section class="main__register-section">
        <div class="main__section-title">회원가입</div>
        <form
          action="/register/newUser"
          method="POST"
          class="main__register-wrapper"
          id="register"
        >
          <div class="control-group">
            <div class="form-group">
              <label>ID</label>
              <input
                type="text"
                class="form-control"
                placeholder="ID를 입력하세요"
                id="userId"
                name="userId"
              />
            </div>
          </div>
          <div class="control-group">
            <div class="form-group">
              <label>비밀번호</label>
              <input
                type="password"
                class="form-control"
                placeholder="비밀번호를 입력하세요"
                id="password"
                name="password"
              />
            </div>
          </div>
          <div class="control-group">
            <div class="form-group">
              <label>비밀번호 확인</label>
              <input
                type="password"
                class="form-control"
                placeholder="비밀번호 한 번 더 입력하세요"
                id="passwordCheck"
                name="passwordCheck"
              />
            </div>
          </div>
        </form>
        <div class="form-group btn" id="sendMessageButtonForm">
          <button
            onclick="register()"
            class="btn btn-primary"
            id="sendMessageButton"
          >
            확인
          </button>
        </div>
      </section>
    </main>
    <%- include('layouts/footer'); -%>
    <script>
      function register() {
        const email_input = document.querySelector('#userId');
        const password_input = document.querySelector('#password');
        const password_check_input = document.querySelector('#passwordCheck');

        if (!email_input.value) {
          alert('이메일을 입력하시오');
          return;
        }
        if (!password_input.value) {
          alert('비밀번호를 입력하시오');
          return;
        }
        if (!password_check_input.value) {
          alert('비밀번호 확인을 입력하시오');
          return;
        }

        if (password_input.value !== password_check_input.value) {
          alert('비밀번호를 다시 확인하시오');
          return;
        }

        const form = document.querySelector('#register');
        form.submit();
      }
    </script>
  </body>
</html>
